<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backchooser"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="47dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="266dp"
                    android:layout_height="302dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="20dp"
                                android:text="Bienvenue à WearLight"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary"
                                android:textSize="23sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:paddingTop="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="je suis un nouveau client "
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="8dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="166dp"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/sgp_btn"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/ic_lgnbtn"
                                android:gravity="center"
                                android:text="s'inscrire"
                                android:textAlignment="center"
                                android:textColor="#ffff" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Je ai déjà un compte"
                                android:textAlignment="center"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="8dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="166dp"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/lgn_btn"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/ic_lgnbtn"
                                android:gravity="center"
                                android:text="S’identifier "
                                android:textAlignment="center"
                                android:textColor="#ffff" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
